# TMS Development Environment Variables
# Copy this file to .env and fill in the values

# Django
SECRET_KEY=django-insecure-change-this-in-production-use-strong-key
DEBUG=True
DJANGO_SETTINGS_MODULE=tms.settings.development

# Database
DB_NAME=tms_db
DB_USER=tms_user
DB_PASSWORD=tms_password_dev
DB_HOST=localhost
DB_PORT=5432

# Redis (optional for development)
REDIS_URL=redis://localhost:6379/1

# CORS (for production)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email (development uses console backend)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@example.com
