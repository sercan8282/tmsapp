# ===========================================
# TMS Production Environment Configuration
# Copy this to .env and fill in your values
# ===========================================

# Domain (without https://)
DOMAIN_NAME=tms.example.com

# Database
DB_NAME=tms_db
DB_USER=tms_user
DB_PASSWORD=your_secure_password_here

# Security - Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your_secret_key_here

# Optional: Initial admin account (only used during install)
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your_admin_password

# Optional: Email settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@example.com
